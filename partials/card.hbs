{{!--
Re-usable card for linking to posts
--}}
{{#get "tags" limit="all"}}
    {{#foreach tags visibility="internal"}}
        {{#get "posts" include="tags" filter="tag:hash-pinned" limit="1"}}
            {{#foreach posts}}
                {{#if @custom.featured_section_title}}
                    {{@custom.featured_section_title}}
                {{else}}
                    {{primary_tag.name}}
                {{/if}}
                <article class="card {{post_class}}">
                    <a class="card-link" href="{{url}}">
                        <div class="card-content">
                            <h2 class="gh-card-title">{{title}}</h2>
                            <p>{{excerpt}}</p>
                            <strong>Read more</strong>
                        </div>
                        {{#if feature_image}}
                        <img class="card-image"
                            srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w,
                                    {{img_url feature_image size="xl"}} 2000w"
                            sizes="(max-width: 1000px) 400px, 700px"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        />
                        {{/if}}
                    </a>
                </article>
            {{/foreach}}
        {{/get}}
    {{/foreach}}
{{/get}}

